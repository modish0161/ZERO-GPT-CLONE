{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node", // Use "node" instead of "bundler"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react", // Set jsx to "react"
    "incremental": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules",
      },
      {
        "name": "next",
      },
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
}